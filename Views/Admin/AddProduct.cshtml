@model VatanBilgisayar.Models.Data.Products
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
@Html.BeginForm("AddProduct", "Admin", FormMethod.Post)
<br />
<br />
<br />
<br />
<br />
@Html.Label("ProductName")
@Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
<br />
@Html.Label("ProductPrice")
@Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
<br />
@Html.Label("Category")
@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
<br />
@Html.Label("ProductPhoto")
@Html.TextBoxFor(x => x.ProductPhoto, new { @class = "form-control" })
<br />
<button class="btn btn-info">Add</button>